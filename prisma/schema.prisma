generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Patient {
  id               String   @id @default(uuid())
  firstName        String
  middleName       String
  lastName         String
  gender           Gender
  birthDate        DateTime
  region           String
  city             String
  woreda           String
  kebele           Int?
  mobileNumber     String
  email            String?
  occupation       String?
  emergencyContact String?
  bloodType        String?
}

model PatientRecord {
  id               String   @id @default(uuid())
  patientType      String   @default("Out")
  patientCondition String
  allergies        String[]
  familyHistory    String
}

enum Gender {
  MALE
  FEMALE
}
